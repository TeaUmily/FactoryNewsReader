<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/navigationItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/customBottomNavigation">
    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:visibility="visible"
                  android:background="@color/colorPrimary"
                  android:id="@+id/customBottomNavigation"
                  android:layout_alignParentBottom="true">

        <Button android:id="@+id/newsBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/news"
                android:textColor="#fff"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>

        <Button android:id="@+id/deletedNewsBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/deleted"
                android:textColor="#fff"
                android:textSize="14sp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_height="match_parent"/>

        <Button android:id="@+id/moreNewsBtn"
                android:background="@color/colorPrimary"
                android:text="@string/more"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>